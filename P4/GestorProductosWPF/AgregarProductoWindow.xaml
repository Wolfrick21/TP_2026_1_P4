<Window x:Class="GestorProductosWPF.AgregarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductosWPF"
        mc:Ignorable="d"
        Title="AgregarProductoWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="22,31,0,0" TextWrapping="Wrap" Text="Id" VerticalAlignment="Top" Width="344"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="22,67,0,0" TextWrapping="Wrap" Text="Nombre" VerticalAlignment="Top" Width="344"/>
        <TextBox x:Name="txtCodigoBarras" HorizontalAlignment="Left" Margin="22,100,0,0" TextWrapping="Wrap" Text="Codigo de barras" VerticalAlignment="Top" Width="344"/>
        <TextBox x:Name="txtCategoria" HorizontalAlignment="Left" Margin="22,138,0,0" TextWrapping="Wrap" Text="Categoria" VerticalAlignment="Top" Width="344"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Margin="22,181,0,0" TextWrapping="Wrap" Text="Precio" VerticalAlignment="Top" Width="344"/>
        <TextBox x:Name="txtStock" HorizontalAlignment="Left" Margin="22,217,0,0" TextWrapping="Wrap" Text="Stock" VerticalAlignment="Top" Width="344"/>
        <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left" Margin="480,100,0,0" VerticalAlignment="Top" Height="52" Width="147" Click="btnGuardar_Click"/>

    </Grid>
</Window>
