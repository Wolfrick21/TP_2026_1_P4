<Window x:Class="GestorProductosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductosWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Inventario">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dataGridProductos" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left" Margin="123,203,0,0" VerticalAlignment="Top" Height="68" Width="180" Click="btnAgregar_Click"/>
                    <Button x:Name="btnEliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="479,203,0,0" VerticalAlignment="Top" Height="68" Width="180" Click="btnEliminar_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Busqueda">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="comboTipoBusqueda" HorizontalAlignment="Center" Margin="0,26,0,0" VerticalAlignment="Top" Width="576"/>
                    <TextBox x:Name="txtBusqueda" HorizontalAlignment="Center" Margin="0,71,0,0" TextWrapping="Wrap" Text="Producto" VerticalAlignment="Top" Width="576"/>
                    <Button x:Name="btnBuscar" Content="Buscar" HorizontalAlignment="Left" Margin="520,119,0,0" VerticalAlignment="Top" Width="165" Height="40" Click="btnBuscar_Click"/>
                    <TextBlock x:Name="txtResultadoBusqueda" HorizontalAlignment="Left" Margin="109,119,0,0" TextWrapping="Wrap" Text="Resultado" VerticalAlignment="Top" Height="136" Width="356"/>
                    <ProgressBar x:Name="progressIteraciones" HorizontalAlignment="Left" Height="23" Margin="463,260,0,0" VerticalAlignment="Top" Width="279"/>
                </Grid>
            </TabItem>
            <TabItem Header="Ordenamiento">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="comboCriterioOrden" HorizontalAlignment="Center" Margin="0,42,0,0" VerticalAlignment="Top" Width="614"/>
                    <Button x:Name="btnOrdenar" Content="Ordenar" HorizontalAlignment="Left" Margin="528,98,0,0" VerticalAlignment="Top" Height="52" Width="146" Click="btnOrdenar_Click"/>
                    <ListView x:Name="listViewOrdenados" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="90,98,342,70">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Canvas x:Name="canvasGrafico" Margin="489,167,65,70">
                        <Rectangle Height="100" Canvas.Left="90" Stroke="Black" Canvas.Top="23" Width="60" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
