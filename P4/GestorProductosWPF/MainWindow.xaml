<Window x:Class="GestorProductosWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestorProductosWPF"
        mc:Ignorable="d"
        Title="Gestor de Productos" Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F8F8">

    <Window.Resources>
        <!--Estilo general de botones-->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="45"/>
        </Style>

        <!--Estilo DataGrid moderno-->
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderBrush" Value="#FFBDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl Background="#FFEDEDED">
            <!-- INVENTARIO -->
            <TabItem Header="Inventario">
                <Grid Background="#FFF3F3F3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dataGridProductos" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="0,10,0,10">
                        <Button x:Name="btnAgregar" Content="Agregar" Click="btnAgregar_Click"/>
                        <Button x:Name="btnEliminar" Content="Eliminar" Click="btnEliminar_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- BÚSQUEDA -->
            <TabItem Header="Búsqueda">
                <Grid Background="#FFF3F3F3" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ComboBox x:Name="comboTipoBusqueda" Width="400" Margin="0,10"/>

                    <TextBox x:Name="txtBusqueda" Width="400" Grid.Row="1" Margin="0,5" Text="Producto"/>

                    <Button x:Name="btnBuscar" Content="Buscar" Grid.Row="2" Click="btnBuscar_Click"/>

                    <TextBlock x:Name="txtResultadoBusqueda" Text="Resultado"
                               Grid.Row="3" Margin="10"
                               TextWrapping="Wrap" FontSize="14" Height="100" Width="400" />

                    <ProgressBar x:Name="progressIteraciones" Grid.Row="4" Width="400" Height="20" Margin="10"/>
                </Grid>
            </TabItem>

            <!-- ORDENAMIENTO -->
            <TabItem Header="Ordenamiento">
                <Grid Background="#FFF3F3F3" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ComboBox x:Name="comboCriterioOrden" Width="400" Margin="10"/>

                    <Button x:Name="btnOrdenar" Content="Ordenar"
                            Grid.Row="0" Grid.Column="1" Margin="10"
                            Click="btnOrdenar_Click"/>

                    <ListView x:Name="listViewOrdenados" Grid.Row="1" Margin="10">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Productos"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <Canvas x:Name="canvasGrafico" Grid.Column="1" Grid.Row="1" Width="250" Margin="10">
                        <Rectangle Height="100" Width="60" Stroke="Black" Canvas.Left="90" Canvas.Top="23"/>
                    </Canvas>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>

